{
    "name": "webmozart/puli",
    "description": "Puli returns the absolute file paths of the files in your PHP project through a unified naming system.",
    "license": "MIT",
    "authors": [
        {
            "name": "Bernhard Schussek",
            "email": "bschussek@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.3.9"
    },
    "require-dev": {
        "symfony/filesystem": "~2.0",
        "twig/twig": "~1.0"
    },
    "suggest": {
        "twig/twig": "Puli provides an extension for the Twig templating engine."
    },
    "minimum-stability": "dev",
    "autoload": {
        "psr-4": {
            "Webmozart\\Puli\\": "src/",
            "Webmozart\\Puli\\Tests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
